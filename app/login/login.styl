.form {
  position: absolute
  width: 230px;
  left: 50%;
  margin: 0 0 0 -115px;

  .inp {
    width: 200px;
    border-radius 5px;
    padding: 12px;
    border: 1px solid #ccc;
    display: block
    margin: 12px 0 0
  }

  .btn {
    width: 60px;
    height: 30px;
    line-height: 26px;
    border: 1px solid #ccc;
    margin: 12px 0 0 0
    cursor: pointer;
    border-radius 5px;
    background-color #fff;
  }
}